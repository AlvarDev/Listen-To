<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivi_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:background="@color/colorBlack"
            android:src="@drawable/logo_white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/app_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvi_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/app_name"
                android:textStyle="italic" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibu_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_play_arrow_black_24px" />

        <ImageButton
            android:id="@+id/ibu_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_cloud_upload_black_24px" />

    </LinearLayout>

</android.support.v7.widget.CardView>

